<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Profile' }) %>

  <body class="login-container">
    <div class="conten-login">
      <%- include('partials/header')%>

      <main class="detalle__main">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 mx-auto mt-5">
                <div class="card mb-3 shadow-lg">
                  <div class="card-header">
                    Perfil usuario
                  </div>
                  <div class="card-body">
                    <form action="/users/update?_method=PUT" method="POST" class="row">
                        <div class="col-12 col-md-6 mb-3">
                            <label for="name" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="name" placeholder="Tu nombre" name="name" value="<%= name %>">
                        </div>     
                        <div class="col-12 col-md-6 mb-3">
                            <label for="name" class="form-label">Email</label>
                            <input type="text" class="form-control" placeholder="Email" name="email" value="<%= email %>"/> 
                        </div>  
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-dark">Guardar cambios</button>
                        </div>
                    </form>
                  </div>
                </div>
            </div>
        </div>
    </main>
        <%- include('partials/footer')%>
    </div>
  </body>

</html>