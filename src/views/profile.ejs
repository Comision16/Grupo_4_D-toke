<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Profile' }) %>

  <body class="login-container">
    <div class="profile__conten-login">
      <%- include('partials/header')%>

      <main class="detalle__main">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 mx-auto mt-5">
                <div class="card mb-3 shadow-lg">
                  <div class="card-header">
                    Perfil usuario
                  </div>
                  <div class="card-body">
                    <form action="/users/update?_method=PUT" method="POST" class="row" id="formProfile">
                        <div class="col-12 col-md-6 mb-3 ">
                            <label for="name" class="form-label">Nombre</label>
                            <input spellcheck="false" type="text" class="form-control" id="name" placeholder="Tu nombre" name="name" value="<%= name %>">
                            <small class="text-danger ms-2" id="msgError-name">
                            </small>
                        </div>
                        <div class="col-12 col-md-6 mb-3 ">
                          <label for="surname" class="form-label">Apellido</label>
                          <input spellcheck="false" type="text" class="form-control" id="surname" placeholder="Tu Apellido" name="surname" value="<%= surname %>">
                          <small class="text-danger ms-2" id="msgError-surname">
                          </small>
                        </div>
                        <small class="text-danger ms-2 my-2"><%= locals.errors && (errors.name && errors.name.msg) %></small>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-dark">Guardar cambios</button>
                        </div>
                    </form>
                  </div>
                </div>
            </div>
        </div>
    </main>
        <%- include('partials/footer')%>
    </div>
    <script src="/js/profile.js"></script>
  </body>

</html>