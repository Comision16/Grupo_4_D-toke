<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', {title: 'Form'}) %>
  <body class="container-product">
    <div class="container-product-content">
      <%- include('partials/header')%>
      <div class="container">
        <h1 class="container-title">Ingresar un Producto</h1>
        <form class="product-form">
          <div class="product-form-contentNamePrice">
            <div class="form-group">
              <label class="form-group__label" for="name"
                >Nombre del producto:</label
              >
              <input
                class="form-group__input"
                type="text"
                id="name"
                name="name"
                required
              />
            </div>
            <div class="form-group">
              <label class="form-group__label" for="price">Precio:</label>
              <input
                class="form-group__input"
                type="number"
                id="price"
                name="price"
                step="0.01"
                required
              />
            </div>
          </div>
          <div class="product-form-contentNamePrice">
            <div class="form-group">
              <label class="form-group__label" for="image">Imagen:</label>
              <input
                class="form-group__input"
                type="file"
                id="image"
                name="image"
                required
              />
            </div>

            <div class="form-group">
              <label class="form-group__label">Categoria:</label>
              <select
                class="form-group__input"
                name="gender"
                id="gender"
                selected
              >
                <option value="Hombres">Hombres</option>
                <option value="Mujeres">Mujeres</option>
                <option value="Niños">Niños</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-group__label" for="description"
              >Descripción:</label
            >
            <textarea
              class="form-group__input"
              id="description"
              name="description"
              required
            ></textarea>
          </div>
          <div class="form-group-checkbox">
            <label class="form-group__label" for="size">Talles:</label>
            <div class="content-checkbox">
              <label><input type="checkbox" name="size" value="38" /> 38</label>
              <label><input type="checkbox" name="size" value="39" /> 39</label>
              <label><input type="checkbox" name="size" value="40" /> 40</label>
            </div>
          </div>

          <button class="form-button" type="submit">Guardar Producto</button>
        </form>
      </div>
      <%- include('partials/footer')%>
    </div>
  </body>
</html>
