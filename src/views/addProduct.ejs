<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Form' }) %>

  <body class="container-product">
    <div class="container-product-content">
      <%- include('partials/header')%>
        <div class="container">
          <h1 class="container-title">Ingresar un Producto</h1>
          <form class="product-form" action="/products/addProduct" method="POST" enctype="multipart/form-data">
            <div class="product-form-contentNamePrice">
              <div class="form-group">
                <label class="form-group__label" for="name">Nombre del producto:</label>
                <input class="form-group__input" type="text" id="name" name="name" />
              </div>
              <div class="form-group">
                <label class="form-group__label" for="price">Precio:</label>
                <input class="form-group__input" type="number" id="price" name="price" step="0.01" />
              </div>
            </div>
            <div class="product-form-contentNamePrice">
              <div class="form-group">
                <label class="form-group__label" for="image">Imagen:</label>
                <input class="form-group__input" type="file" id="image" name="image" />
              </div>

              <div class="form-group">
                <label class="form-group__label">Categoria:</label>
                <select class="form-group__input" name="gender" id="gender" selected>
                  <option value="Nike">Nike</option>
                  <option value="Adidas">Adidas</option>
                  <option value="Puma">Puma</option>
                  <option value="Reebok">Reebok</option>

                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="form-group__label" for="description">Descripci√≥n:</label>
              <textarea class="form-group__input" id="description" name="description"></textarea>
            </div>
            <div class="form-group-checkbox">
              <label class="form-group__label" for="size">Talles:</label>
              <div class="content-checkbox">
                <label><input type="checkbox" name="size" value="38" /> 38</label>
                <label><input type="checkbox" name="size" value="39" /> 39</label>
                <label><input type="checkbox" name="size" value="40" /> 40</label>
              </div>
            </div>

            <button class="form-button" type="submit">Guardar Producto</button>
          </form>
        </div>
        <%- include('partials/footer')%>
    </div>
    <!-- AOS -->
    <script>
      AOS.init();
    </script>
    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <!-- boostrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"></script>
  </body>

</html>